@model MiniReportsProject.Models.GranteeCreateViewModel

@{
    ViewBag.Title = "Create Grantee";
}

<style>
    .min-h-screen {
        min-height: 100vh;
    }

    .form-card {
        max-width: 820px;
        margin: 48px auto;
    }

    .form-label {
        font-weight: 500;
        color: #374151;
    }

    .form-control,
    .form-select {
        padding: 0.55rem 0.75rem;
    }

    .text-danger {
        font-size: 0.875rem;
        margin-top: 0.25rem;
    }
</style>

<div class="w-100 min-h-screen bg-light">

    <!-- Card -->
    <div class="card border-0 shadow-sm form-card">

        <!-- Header -->
        <div class="card-header bg-white border-bottom px-4 py-3">
            <h5 class="mb-0 fw-semibold text-secondary">
                Create Grantee
            </h5>
        </div>

        <!-- Body -->
        <div class="card-body px-4 py-4">

            <p class="text-muted mb-4">
                Provide the required details to create a new grantee.
            </p>

            <!-- Error/Success Messages -->
            <div id="alertContainer"></div>

            <!-- Form -->
            <form id="granteeForm">

                <!-- Name -->
                <div class="mb-4">
                    <label for="GranteeName" class="form-label">Name</label>
                    <input type="text" 
                           id="GranteeName" 
                           name="GranteeName" 
                           class="form-control" 
                           placeholder="Enter name"
                           required>
                    <div class="text-danger" id="error-GranteeName"></div>
                </div>

                <!-- Grantee Type -->
                <div class="mb-4">
                    <label for="SelectedTypeName" class="form-label">Grantee Type</label>
                    <select id="SelectedTypeName" 
                            name="SelectedTypeName" 
                            class="form-select"
                            required>
                        <option value="">Select type</option>
                        @foreach (var type in Model.EntityTypes ?? Enumerable.Empty<MiniReportsProject.Models.EntityTypeModel>())
                        {
                            <option value="@type.TypeName">@type.TypeName</option>
                        }
                    </select>
                    <div class="text-danger" id="error-SelectedTypeName"></div>
                </div>

                <!-- Address -->
                <div class="mb-4">
                    <label for="Address" class="form-label">Address</label>
                    <input type="text" 
                           id="Address" 
                           name="Address" 
                           class="form-control" 
                           placeholder="Enter address">
                    <div class="text-danger" id="error-Address"></div>
                </div>

                <!-- Actions -->
                <div class="d-flex justify-content-end gap-2 pt-3">
                    <button type="button" 
                            class="btn btn-outline-secondary px-4"
                            onclick="goBack()">
                        Cancel
                    </button>

                    <button type="submit" 
                            class="btn btn-primary px-4"
                            id="submitBtn">
                        Create
                    </button>
                </div>

            </form>

        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Form submission via AJAX
            $("#granteeForm").on("submit", function (e) {
                e.preventDefault();

                // Clear previous errors
                $(".text-danger").text("");
                $("#alertContainer").html("");

                const formData = {
                    GranteeName: $("#GranteeName").val().trim(),
                    SelectedTypeName: $("#SelectedTypeName").val().trim(),
                    Address: $("#Address").val().trim()
                };

                // Basic validation
                if (!formData.GranteeName) {
                    $("#error-GranteeName").text("Grantee name is required.");
                    return;
                }

                if (!formData.SelectedTypeName) {
                    $("#error-SelectedTypeName").text("Grantee type is required.");
                    return;
                }

                // Disable submit button
                $("#submitBtn").prop("disabled", true).text("Creating...");

                // AJAX call
                $.ajax({
                    url: "/State/CreateGrantee",
                    type: "POST",
                    contentType: "application/json",
                    data: JSON.stringify(formData),
                    success: function (response) {
                        if (response.success) {
                            // Show success message
                            $("#alertContainer").html(
                                `<div class="alert alert-success alert-dismissible fade show" role="alert">
                                    <strong>Success!</strong> ${response.message}
                                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                </div>`
                            );

                            // Reset form
                            $("#granteeForm")[0].reset();

                            // Redirect after 1.5 seconds
                            setTimeout(function () {
                                window.location.href = "/State/Index";
                            }, 1500);
                        } else {
                            // Show error message
                            $("#alertContainer").html(
                                `<div class="alert alert-danger alert-dismissible fade show" role="alert">
                                    <strong>Error!</strong> ${response.message}
                                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                </div>`
                            );
                            $("#submitBtn").prop("disabled", false).text("Create");
                        }
                    },
                    error: function (xhr) {
                        let errorMsg = "An unexpected error occurred.";
                        
                        if (xhr.responseJSON && xhr.responseJSON.message) {
                            errorMsg = xhr.responseJSON.message;
                        }

                        $("#alertContainer").html(
                            `<div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <strong>Error!</strong> ${errorMsg}
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>`
                        );

                        $("#submitBtn").prop("disabled", false).text("Create");
                    }
                });
            });
        });

        // Navigate back
        const goBack = () => {
            window.location.href = "/";
        };
    </script>
}
