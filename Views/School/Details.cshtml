@model MiniReportsProject.ViewModel.SchoolDetailsViewModel

@{
    ViewBag.Title = "School Details";
}

<div class="container mt-4">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">School Details</h2>
        <div>
            @*@Html.ActionLink("Edit", "Edit", new { /* id = Model.SchoolID */ },
                new { @class = "btn btn-primary me-2" })*@

            @Html.ActionLink("Back to List", "Index",
                "Site",
                new {id = Model.SiteID},
                new { @class = "btn btn-outline-secondary" })
        </div>
    </div>

    <!-- Card -->
    <div class="card shadow-sm border-0">
        <div class="card-body">

            <h5 class="card-title mb-4 text-muted">Basic Information</h5>

            <div class="row mb-3">
                <div class="col-md-3 fw-bold text-secondary">
                    School Name
                </div>
                <div class="col-md-9">
                    @Model.SchoolName
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-3 fw-bold text-secondary">
                    Address
                </div>
                <div class="col-md-9">
                    @Model.Address
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-md-3 fw-bold text-secondary">
                    Site
                </div>
                <div class="col-md-9">
                    @Model.SiteName
                </div>
            </div>

            <hr />

            <!-- Grades -->
            <h5 class="card-title mb-3 text-muted">Grades Served</h5>

            <div>
                @if (Model.GradeNameList != null && Model.GradeNameList.Any())
                {
                    foreach (var grade in Model.GradeNameList)
                    {
                        <span class="badge bg-primary me-1 mb-1 px-3 py-2">
                            @grade
                        </span>
                    }
                }
                else
                {
                    <span class="text-muted">No grades assigned</span>
                }
            </div>

        </div>
    </div>
</div>
