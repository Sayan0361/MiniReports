<!DOCTYPE html>
<html>
<head>
    <title>Edit School</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

    <style>
        body {
            background-color: #f8f9fa;
        }

        .card {
            max-width: 820px;
            margin: 2rem auto;
        }

        .btn-group .btn {
            min-width: 48px;
        }
    </style>
</head>
<body>

    <div class="w-100 min-vh-100 bg-light py-4">

        <div class="card border-0 shadow-sm">

            <div class="card-header bg-white border-bottom px-4 py-3">
                <h5 class="mb-0 fw-semibold text-secondary">
                    Edit School
                </h5>
            </div>

            <div class="card-body px-4 py-4">

                <p class="text-muted mb-4">
                    Update the school details and select grades below.
                </p>

                <form id="schoolForm">

                    <!-- hidden IDs -->
                    <input type="hidden" id="SchoolID" value="1">
                    <input type="hidden" id="SiteID" value="5">

                    <!-- School Name -->
                    <div class="mb-4">
                        <label class="form-label">School Name</label>
                        <input type="text" id="SchoolName" class="form-control" placeholder="Enter school name">
                    </div>

                    <!-- Address -->
                    <div class="mb-4">
                        <label class="form-label">Address</label>
                        <input type="text" id="Address" class="form-control" placeholder="Enter school address">
                    </div>

                    <!-- Grades -->
                    <div class="mb-4">
                        <label class="form-label">Grades</label>

                        <div class="btn-group d-flex flex-wrap" role="group">
                            <!-- Grades 1–12 -->
                            <script>
                                for (let i = 1; i <= 12; i++) {
                                    document.write(`
                                                                <input type="checkbox"
                                                                       class="btn-check grade-checkbox"
                                                                       id="grade_${i}"
                                                                       value="${i}">
                                                                <label class="btn btn-outline-primary me-1 mb-1"
                                                                       for="grade_${i}">${i}</label>
                                                            `);
                                }
                            </script>
                        </div>

                        <div class="mt-2">
                            <button type="button"
                                    id="btnSelectAllGrades"
                                    class="btn btn-sm btn-outline-secondary">
                                Select All
                            </button>
                        </div>
                    </div>

                    <!-- Toggle -->
                    <div class="mb-4">
                        <div class="form-check form-switch">
                            <input class="form-check-input"
                                   type="checkbox"
                                   id="toggleLinkSite">

                            <label class="form-check-label">
                                Link this school to the current site
                            </label>
                        </div>
                    </div>

                    <!-- Actions -->
                    <div class="d-flex justify-content-end gap-2 pt-3">
                        <button type="button" class="btn btn-outline-secondary px-4">
                            Cancel
                        </button>

                        <button type="submit" class="btn btn-primary px-4">
                            Update School
                        </button>
                    </div>

                </form>

            </div>
        </div>
    </div>

    <script>
        $(function () {

            const SchoolID = localStorage.getItem("SchoolID");

            $.ajax({
                url: "/School/GetEditSchoolDetails",
                type: "GET",
                data: { SchoolID: SchoolID },
                success: function (res) {

                    if (!res.success) {
                        alert(res.message || "Failed to load school details");
                        return;
                    }

                    // Populate fields
                    $("#SchoolName").val(res.school.SchoolName);
                    $("#Address").val(res.school.Address);
                    $("#SiteID").val(res.school.SiteID);

                    // Reset grades
                    $(".grade-checkbox").prop("checked", false);

                    // Check selected grades
                    res.selectedGrades.forEach(function (grade) {
                        $("#grade_" + grade).prop("checked", true);
                    });

                    // Toggle site link
                    $("#toggleLinkSite").prop("checked", res.school.SiteID > 0);
                },
                error: function () {
                    alert("Error loading school details");
                }
            });

            // Toggle select all grades
            $("#btnSelectAllGrades").click(function () {
                const allChecked =
                    $(".grade-checkbox:checked").length === $(".grade-checkbox").length;

                $(".grade-checkbox").prop("checked", !allChecked);
                $(this).text(allChecked ? "Select All" : "Deselect All");
            });

            // Submit
            $("#schoolForm").on("submit", function (e) {
                e.preventDefault();

                const selectedGrades = $(".grade-checkbox:checked")
                    .map(function () { return this.value; })
                    .get();

                if (selectedGrades.length === 0) {
                    alert("Please select at least one grade");
                    return;
                }

                $.ajax({
                    url: "/School/SaveEditSchool", 
                    type: "POST",
                    data: {
                        SchoolID: SchoolID,
                        SiteID: $("#SiteID").val(),
                        SchoolName: $("#SchoolName").val(),
                        Address: $("#Address").val(),
                        SelectedGrades: selectedGrades,
                        LinkSiteToSchool: $("#toggleLinkSite").is(":checked")
                    },
                    success: function (res) {
                        if (res.success) {
                            alert(res.message);
                            window.location.href = `/Site/Index/${res.siteId}`;
                        } else {
                            console.log("SchoolID: ", SchoolID)
                            alert("Error: " + res.message);
                        }
                    },
                    error: function (xhr) {
                        console.error(xhr);
                        alert("Error saving school");
                    }
                });
            });

        });
    </script>

</body>
</html>
